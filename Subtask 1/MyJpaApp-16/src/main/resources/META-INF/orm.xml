<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
	 https://java.sun.com/xml/ns/persistence/orm_1_0.xsd"
	 version="1.0">
	 <description>JPA Using XML Entity Mapping</description>
	 <package>com.skillsoft.demo.jpa</package>
	 <entity class="com.skillsoft.demo.jpa.Book" name="Book">
	   <table name="book"/>
	   <attributes>
	    <id name="id">
	      <generated-value strategy="IDENTITY"/>
	    </id>
	    <basic name="author">
	       <column name="author" nullable="false"/>
	    </basic>
	    <basic name="title">
	     <column name="title" unique="true" nullable="false" length="55"/>
	    </basic>
	    <basic name="price">
	     <column name="price" precision="7" scale="4"/>
	    </basic>
	    
	   </attributes>
	 </entity>
	 </entity-mappings>